doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title OurMeeting.js

    link(rel='stylesheet', type='text/css', href='build/build.css')

  body

    article(class="article")

      section
        div
          img(src="images/our-meeting-logo.png", class="logo")
          h1 OurMeeting.js
        h3 A library to facilitate creating conference applications and collaboration services.
        h4 Created by: Gabar Ewen, Huy Pham, and Justin Cruz

      section
        h2 API
        h3 
          a(href="https://github.com/OSConf/Our-meeting/blob/master/app/api/readme.md")
            Github OurMeeting.js

      section
        h2 Tech Stack
        div 
          ul(class="ourmeeting-list")
            li 
              h3 Core Library
              ul 
                li Vanilla JavaScript
                li OurMeeting API
                li WebRTC API
                li OurMeeting WebRTC
          ul(class="demo-list")
            li
              h3 Demo Site
              ul
                li OurMeeting Manager
                li Socket.io
                li Node
                li Express

      section
        h3 
          a(href="http://ourmeeting.azurewebsites.net/")
            OurMeeting Demo
        img(src="images/demo.png", class="demo")

      section
        h2 Developer Workflow
        img(src="images/devflow.png", class="dev-flow")

    script(src='build/build.js')